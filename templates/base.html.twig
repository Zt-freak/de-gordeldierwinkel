<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <style>
            html, body {
                font-family: sans-serif;
                margin: 0;
            }

            .notice {
                background-color: #4F805D;
                font-size: 21px;
                font-weight: 400;
                font-family: Helvetica, Arial, sans-serif;
                display: flex;
                align-items: center;
                padding: 0 10px;
                color: #ffffff;
            }
            .errornotice {
                background-color: #b0413e;
                font-size: 21px;
                font-weight: 400;
                font-family: Helvetica, Arial, sans-serif;
                display: flex;
                align-items: center;
                padding: 0 10px;
                color: #ffffff;
            }
            .noticeimage {
                height: 80px;
            }
            .notice a, .errornotice a {
                color: #ffffff;
            }
        </style>
    </head>
    <body>
        <nav>
            <a href="{{ path('index') }}">Home</a>
            <a href="{{ path('product_index') }}">Products</a>
            <a href="{{ path('cart_index') }}">Your Cart</a>
            {% if app.user %}
                <a href="{{ path('fos_user_security_logout') }}">Log out</a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">Log in</a>
            {% endif %}

        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
